<div id="section"> 
  <p id="notice"><%= notice %></p>

  <p>
    <h1>
      <b>Title:</b>
      <%= @tournament.title %>
    </h1>
  </p>

  <p>
    <b>Category:</b>
    <%= @tournament.category %>
  </p>

  <p>
    <b>Startdate:</b>
    <%= @tournament.startDate %>
  </p>

  <p>
    <b>Enddate:</b>
    <%= @tournament.endDate %>
  </p>

  <p>
    <b>Registrationoffice:</b>
    <%= @tournament.registrationOffice %>
  </p>

  <p>
    <b>Deadline:</b>
    <%= @tournament.deadline %>
  </p>

  <p>
    <b>Information:</b>
    <%= simple_format @tournament.information %>
  </p>

  <p>
    <b>Place:</b> <br />
    <iframe width="425" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="<%= iframe_place(@tournament)%>"></iframe>
  </p>

  <p>

</div>

<div id="menue">

  <%= render 'shared/nav' %>

  <ul>
    <% if user_signed_in? %>
      <% if (current_user.has_role? :admin) or (current_user.id == @tournament.creator_id) %>
        <li><%= link_to 'Edit', edit_tournament_path(@tournament) %></li>
        <li><%= link_to 'Destroy', @tournament, :confirm => 'Are you sure?', :method => :delete %></li>
      <% end %>
    <% end %>
    <li><%= link_to 'Back', tournaments_path %></li>
  </ul>
</div>