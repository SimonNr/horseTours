= form_for @tour do |f|
	- if @tour.errors.any?
	#error_explanation
	  %h2= "#{pluralize(@tour.errors.count, "error")} prohibited this tour from being saved:"
	  %ul
	  	- @tour.error.full_messages.each do |msg|
	  	  %li= msg

	.field
	  = f.label :title
	  = f.text_field :title
	.field
	  = f.label :teaser
	  = f.text_field :teaser
	.field
	  = f.label :difficulty
	  = f.text_field :difficulty
	.field
	  = f.label :duration
	  = f.text_field :duration
	.field
	  = f.label :url
	  = f.text_field :url
	.field
	  = f.label :category
	  = f.collection_select :category_ids, Category.all, :id, :name, { selected: @tour.category_ids }, { multiple: true }
	.actions
	  = f.submit 'Save'